<% variables = measure.hqmf_document[:source_data_criteria].find_all {|key,dc| (dc[:variable] && !dc[:specific_occurrence])} %>
<% if variables.length > 0 %>
<div class="panel panel-default variables_children">
  <div class="panel-heading">
    <h4 class="panel-title panel-population">
      <a data-toggle="collapse" href="#collapse_variables_<%= measure[:cms_id] %>_<%= measure[:sub_id] %>">
        <div>
          <span class="population-label variables rationale-target"><b>Variables: </b><span class="sr-only sr-highlight-status"></span></span>
          <div class="pull-right">
            <i class="fa fa-lg fa-angle-down toggle-icon" aria-hidden="true"></i>
            <span class="sr-only">toggle variables</span>
          </div>
        </div>
      </a>
    </h4>
  </div>
  <div id="collapse_variables_<%= measure[:cms_id] %>_<%= measure[:sub_id] %>" class="panel-collapse collapse in">
    <div class="panel-body">
      <ul>
        <% variables.each do |key,dc| %>

          <li>
            <% rat_ref = final_rationale_ref(key)%>
            <span class="<%= dc %> rationale-target rationale eval-<%= rat_ref %>">
              <b><%= dc[:description] %> = </b>
              <span class="sr-only sr-highlight-status"></span>
            </span>
            <%= render partial: 'highlighting/data_criteria', locals: {reference: dc[:source_data_criteria], expand_variable: true, measure: measure, tag: "span"} %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<% end %>
